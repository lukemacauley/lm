.theme-dark .nivo-directionNav a {
	display:block;
	width:30px;
	height:30px;
	background: url(<%= asset_path 'arrows.png' %>) no-repeat;
	text-indent:-9999px;
	border:0;
	top: auto;
	bottom: -36px;
	z-index: 11;
}

.theme-dark a.nivo-nextNav {
	background-position:-16px 50%;
	top: calc(50% - 53px);
	right:0px;
}
.theme-dark a.nivo-nextNav::selection, .theme-dark a.nivo-prevNav::selection {
	background-color: white;
}
.theme-dark a.nivo-prevNav {
  background-position:11px 50%;
  top: calc(50% - 53px);
  left: 0;
}